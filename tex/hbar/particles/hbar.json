{
	"format_version":"1.10.0",
	"particle_effect":{
		"description":{
			"identifier":"toko:hbar",
			"basic_render_parameters":{
				"material":"toko",
				"texture":"assets/hbar.png"
			}
		},
		"components":{
			"minecraft:emitter_rate_instant":{"num_particles":1},
			"minecraft:emitter_lifetime_looping":{"active_time":0.2},
			"minecraft:emitter_shape_point":{},
			"minecraft:emitter_local_space":{"position":true,"rotation":true},
			"minecraft:particle_lifetime_expression":{"max_lifetime":0.3},
			"minecraft:particle_motion_parametric":{"relative_position":[0,"1+math.sin(q.time_stamp*4.5)*0.02",0]},
			"minecraft:particle_appearance_billboard":{
				"size":["math.ln(q.max_health+1)*.2","math.ln(q.max_health+1)/q.max_health*.2"],"facing_camera_mode":"lookat_xyz",
				"uv":{
					"texture_width":2,"texture_height":2,
					"uv":["1-q.health/q.max_health","(q.distance_from_camera<24||q.can_fly||q.has_target)&&!query.is_first_person?1:0"],"uv_size":[1,1]
				}
			},
			"minecraft:particle_appearance_tinting":{"color":["1-q.health/q.max_health","q.health/q.max_health",0,1]}
			//"minecraft:particle_appearance_lighting":{}
		}
	}
}
